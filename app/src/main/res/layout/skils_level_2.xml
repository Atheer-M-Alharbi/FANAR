<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".TABMainPages.parent_Plan"
android:background="@color/white"
android:orientation="vertical"
android:layout_gravity="center_horizontal"
android:id="@+id/skills_level_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E85A8A"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white"
            app:title="Plan"
            />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Second Level: Please select the skills that your child don't have it"
            android:textColor="@color/main"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/color_2"
            android:layout_width="342dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHighlight="@color/main"
            android:text="Learn the colors"
            android:textSize="15dp"
            />

        <CheckBox
            android:id="@+id/size_2"
            android:layout_width="342dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Distinguish between sizes"
            android:textSize="15dp"
            android:textColorHighlight="@color/main"
            />

        <CheckBox
            android:id="@+id/image_2"
            android:layout_width="342dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Arrange the image"
            android:textSize="15dp"
            android:textColorHighlight="@color/main"/>

        <CheckBox
            android:id="@+id/Geometric_2"
            android:layout_width="342dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Drawing Geometric Shapes"
            android:textSize="15dp"
            android:textColorHighlight="@color/main"/>


        <android.widget.Button
            android:id="@+id/Okay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/costum_login_botton"
            android:text="Okay"
            android:textColor="@color/white"
            android:transitionName="login_trans" />

    </LinearLayout>

        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/menu_cornors"
            app:cnb_menuResource="@menu/nav_menu"
            app:cnb_orientationMode="horizontal"
            app:cnb_unselectedColor="#9E9898"
            android:elevation="1dp"
            />


</RelativeLayout>
